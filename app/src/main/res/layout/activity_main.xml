<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.github.runly.circularprogressview.ProgressView
            android:id="@+id/progress1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

        <com.github.runly.circularprogressview.ProgressView
            android:id="@+id/progress2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="118dp"
            android:layout_marginStart="118dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="horizontal"
        >

        <com.github.runly.circularprogressview.ProgressView
            android:id="@+id/progress3"
            app:cpd_circleBackgroundColor="@color/colorAccent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <com.github.runly.circularprogressview.ProgressView
            android:id="@+id/progress4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            app:cpd_reverse="true"
            app:cpd_inverted="true"
            app:cpd_automaticallyRestart="true"
            app:cpd_rotateDuration="10000"
            app:pv_progressMode="determinate"
            app:cpd_circleBackgroundColor="@color/colorAccent"
            />

    </LinearLayout>

</LinearLayout>
